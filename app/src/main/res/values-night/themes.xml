<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherZoomer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary_variant_dark_mode</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant_dark_mode</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary_dark_mode</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant_dark_mode</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SCREEN">
        <item name="android:background">@color/darkest_gray1</item>
    </style>

    <style name="BigBoldText">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">45sp</item>
        <item name="drawableTint">@color/light_text_color</item>
        <item name="fontFamily">@font/quicksand_semi_bold</item>
    </style>

    <style name="BigBoldText2">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="drawableTint">@color/light_text_color</item>
        <item name="fontFamily">@font/quicksand_semi_bold</item>
    </style>

    <style name="BigBoldText3">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">23sp</item>
        <item name="drawableTint">@color/light_text_color</item>
        <item name="fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="MediumBoldText">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:gravity">center</item>
        <item name="drawableTint">@color/light_text_color</item>
        <item name="fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="MediumSemiBoldText">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:gravity">center</item>
        <item name="drawableTint">@color/light_text_color</item>
        <item name="fontFamily">@font/quicksand_semi_bold</item>
    </style>

    <style name="MediumSemiBoldTextWithoutDrawableTint">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/quicksand_semi_bold</item>
    </style>

    <style name="SmallBoldText">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:gravity">center</item>
        <item name="drawableTint">@color/light_text_color</item>
        <item name="fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="SmallSemiBoldText">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="drawableTint">@color/light_text_color</item>
        <item name="fontFamily">@font/quicksand_semi_bold</item>
    </style>

    <style name="SmallRegularText">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="drawableTint">@color/light_text_color</item>
        <item name="fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="SmallRegularTextWithouDrawableTint">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="BUTTON">
        <item name="android:background">@drawable/curved_rectangle_bg</item>
        <item name="backgroundTint">@color/color_primary_variant_dark_mode</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="LineDesign">
        <item name="android:background">@color/white</item>
    </style>

    <!-- icon color if light mode on -->
    <style name="ICON">
        <item name="tint">@color/white</item>
    </style>

    <style name="CardViewStyle">
        <item name="cardBackgroundColor">@color/darkest_gray2</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="MaterialCardViewStyle">
        <item name="cardBackgroundColor">@color/darkest_gray2</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="helperTextTextColor">@color/white</item>
        <item name="boxStrokeColor">@drawable/text_input_color</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ManualLocationTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxStrokeColor">@drawable/text_input_color</item>
        <item name="boxBackgroundColor">@color/darkest_gray1</item>
        <item name="hintTextColor">@color/color_primary_light</item>
    </style>

    <style name="ManualLocationTextInputEditTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_corner</item>
    </style>

    //Search bottom sheet style
    <style name="CustomBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>
    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_dark_mode_bottom_sheet</item>
    </style>

</resources>