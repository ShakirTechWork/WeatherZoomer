<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cv_parent_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginVertical="10dp"
    android:layout_marginStart="15dp"
    style="@style/CardViewStyle"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SmallSemiBoldText"
            tools:text="10:00"/>

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/day323"/>

        <TextView
            android:id="@+id/tv_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MediumBoldText"
            android:textSize="24sp"
            tools:text="23C"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tv_humidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SmallRegularTextWithouDrawableTint"
            tools:text="30%"
            android:drawableStart="@drawable/baseline_water_drop_16"
            android:drawableTint="@color/color_primary_light"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>