<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SCREEN"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.hourlyWeatherInfo.HourlyWeatherInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical"
        android:visibility="visible">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_current_data_card"
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tv_selected_date_time"
                    style="@style/SmallBoldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textColor="@color/color_primary_light"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Mon 05:22 PM" />

                <TextView
                    android:id="@+id/tv_temperature"
                    style="@style/BigBoldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_selected_date_time"
                    tools:text="34°C" />

                <TextView
                    android:id="@+id/tv_feels_like_temperature"
                    style="@style/SmallSemiBoldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_temperature"
                    tools:text="Feels Like 34°C" />

                <TextView
                    android:id="@+id/tv_condition"
                    style="@style/MediumBoldText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    app:layout_constraintEnd_toStartOf="@id/img_condition"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_feels_like_temperature"
                    tools:text="Mist" />

                <ImageView
                    android:id="@+id/img_condition"
                    android:layout_width="100dp"
                    android:layout_height="0dp"
                    android:contentDescription="@string/condition_image"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@drawable/moon_16" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_snow_data"
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="15dp"
            android:visibility="gone"
            tools:visibility="visible">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#010933">
                <com.github.matteobattilana.weather.WeatherView
                    android:id="@+id/snow_view"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/tv_chance_of_snow_fall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="12dp"
                    tools:text="Chance of Snowfall: 50%"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quicksand_bold"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_rain_data"
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="15dp"
            android:visibility="gone"
            tools:visibility="visible">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#064C7A">
                <com.github.matteobattilana.weather.WeatherView
                    android:id="@+id/rain_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_chance_of_rain_fall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="12dp"
                    tools:text="Chance of Rainfall: 50%"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quicksand_bold"/>


                <TextView
                    android:id="@+id/tv_rain_precipitation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_margin="12dp"
                    tools:text="Rain Precipitaion: 15.0 mm"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quicksand_bold"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_wind_data"
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_wind_title"
                    style="@style/SmallBoldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:drawablePadding="5dp"
                    app:drawableEndCompat="@drawable/ic_wind"
                    android:text="@string/wind"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/MediumSemiBoldText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Direction" />

                        <TextView
                            android:id="@+id/tv_wind_degree_direction"
                            style="@style/MediumSemiBoldTextWithoutDrawableTint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:drawablePadding="6dp"
                            tools:text="50%" />
                    </LinearLayout>

                    <View
                        style="@style/LineDesign"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="8dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/MediumSemiBoldText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Chill" />

                        <TextView
                            android:id="@+id/tv_wind_chill"
                            style="@style/MediumSemiBoldTextWithoutDrawableTint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:drawablePadding="6dp"
                            android:drawableTint="@color/color_primary_light"
                            tools:text="NW" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/MediumSemiBoldText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Speed" />

                        <TextView
                            android:id="@+id/tv_wind_speed"
                            style="@style/MediumSemiBoldTextWithoutDrawableTint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:drawablePadding="6dp"
                            android:drawableTint="@color/tangerine_yellow"
                            tools:text="50%" />
                    </LinearLayout>

                    <View
                        style="@style/LineDesign"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="8dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/MediumSemiBoldText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Gust Speed" />

                        <TextView
                            android:id="@+id/tv_gust_speed"
                            style="@style/MediumSemiBoldTextWithoutDrawableTint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:drawablePadding="6dp"
                            tools:text="NW"
                            app:drawableTint="@color/color_primary_light" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_other_data"
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="12dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/MediumSemiBoldText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Humidity" />

                        <TextView
                            android:id="@+id/tv_humidity_percentage"
                            style="@style/MediumSemiBoldTextWithoutDrawableTint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:drawablePadding="6dp"
                            android:drawableTint="@color/color_primary_light"
                            tools:text="50%" />
                    </LinearLayout>

                    <View
                        style="@style/LineDesign"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="8dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/MediumSemiBoldText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Heat Index" />

                        <TextView
                            android:id="@+id/tv_heat_index"
                            style="@style/MediumSemiBoldTextWithoutDrawableTint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:drawablePadding="6dp"
                            android:drawableTint="@color/color_primary_light"
                            tools:text="NW" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/MediumSemiBoldText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="UV Status" />

                        <TextView
                            android:id="@+id/tv_uv_status"
                            style="@style/MediumSemiBoldTextWithoutDrawableTint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:drawablePadding="6dp"
                            android:drawableTint="@color/tangerine_yellow"
                            tools:text="50%" />
                    </LinearLayout>

                    <View
                        style="@style/LineDesign"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="8dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/MediumSemiBoldText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Visibility" />

                        <TextView
                            android:id="@+id/tv_visibiity"
                            style="@style/MediumSemiBoldTextWithoutDrawableTint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:drawablePadding="6dp"
                            tools:text="NW"
                            app:drawableTint="@color/color_primary_light" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/MediumSemiBoldText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Dewpoint" />

                        <TextView
                            android:id="@+id/tv_dewpoint_temperature"
                            style="@style/MediumSemiBoldTextWithoutDrawableTint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:drawablePadding="6dp"
                            android:drawableTint="@color/tangerine_yellow"
                            tools:text="50%" />
                    </LinearLayout>

                    <View
                        style="@style/LineDesign"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="8dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/MediumSemiBoldText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Pressure" />

                        <TextView
                            android:id="@+id/tv_pressure"
                            style="@style/MediumSemiBoldTextWithoutDrawableTint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:drawablePadding="6dp"
                            tools:text="NW"
                            app:drawableTint="@color/color_primary_light" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/MediumSemiBoldText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sky : " />

                    <TextView
                        android:id="@+id/tv_sky_condition"
                        style="@style/MediumSemiBoldTextWithoutDrawableTint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="6dp"
                        tools:text="50%" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>